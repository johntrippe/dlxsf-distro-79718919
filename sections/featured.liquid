      <img src="https://cdn.shopify.com/s/files/1/0714/9533/files/NEWS-HEADER-2.png?v=1584463946"><br>
			
			<!-- START NEWS STORIES -->
      <div style="padding: 10px;">
			<font color="{{ section.settings.text1color }}">
			
			{% if section.settings.story1title != blank %}<p><a href="{{ section.settings.story1link }}"><b><font color="{{ section.settings.text1color }}"><u>{{ section.settings.story1title | upcase }}</u></font></b></a> --> {{ section.settings.story1text }}</p>{% endif %}
			
			{% if section.settings.story2title != blank %}<p><a href="{{ section.settings.story2link }}"><b><font color="{{ section.settings.text1color }}"><u>{{ section.settings.story2title | upcase }}</u></font></b></a> --> {{ section.settings.story2text }}</p>{% endif %}
			
