

<div class="grid-item" style="padding: 0px;">
	{% if section.settings.promo1link != blank %}
	<div class="grid-item large--one-whole" style="padding: 10px; padding-top:0px;">
		<!-- START VIDEO -->
		<a href="{{ section.settings.promo1link }}"><img src="{{ section.settings.promo1 | img_url: '1000x500' }}" border="0"></a>
		<!-- END VIDEO -->
	</div>
	{% endif %}
	{% if section.settings.promo1video == true %}
	<div class="grid-item large--one-whole" style="padding: 10px; padding-top:0px;">
		{{ section.settings.promo1videolink }}
	</div>
	{% endif %}
</div>

<div class="grid-item" style="padding: 0px; display: flex; flex-wrap: wrap;">
	
	<!-- START TEXT SECTION -->
	
		<div class="grid-item large--one-half" style="padding: 10px;">
			<div style="padding: 10px; {% if section.settings.text1bgimage != blank %}background: url({{ section.settings.text1bgimage | img_url: '1000x1000' }});{% endif %}{% if section.settings.text1bgcolor != blank %}background-color: {{ section.settings.text1bgcolor }};{% endif %} height: 100%;"><h2>{{ section.settings.text1header }}:</h2>{{ section.settings.text1text }}{% if section.settings.text1linkurl != blank %} 
<br><br><a href="{{ section.settings.text1linkurl }}"><font color="red"><b>{{ section.settings.text1linktext }}</b></font></a>{% endif %}<br><br>
			</div>
		</div>

		<div class="grid-item large--one-half" style="padding: 10px;">
			<div style="padding: 10px; {% if section.settings.text2bgcolor != blank %}background-color: {{ section.settings.text2bgcolor }};{% endif %} height: 100%; {% if section.settings.text2bgimage != blank %}background: url({{ section.settings.text2bgimage | img_url: '1000x1000' }});{% endif %}"><h2>{{ section.settings.text2header }}:</h2><h2>{{ section.settings.text2text }}</h2><br><br>
			</div>
		</div>
		
	<!-- END TEXT SECTION -->
	
	<!-- START 2 SECTION -->
	
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo2link }}"><img border="0" src="{{ section.settings.promo2 | img_url: '500x500' }}"></a></div>
		
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo3link }}"><img border="0" src="{{ section.settings.promo3 | img_url: '500x500' }}"></a></div>
		
	<!-- END 2 SECTION -->
	
	<!-- START 3 SECTION -->
	
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo4link }}"><img border="0" src="{{ section.settings.promo4 | img_url: '500x500' }}"></a></div>
		
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo5link }}"><img border="0" src="{{ section.settings.promo5 | img_url: '500x500' }}"></a></div>
		
	<!-- END 3 SECTION -->
	
	<!-- START 4 SECTION -->
		{% if section.settings.promo6video == true %}
		<div class="grid-item large--one-whole" style="padding: 10px; padding-top:0px;">
			{{ section.settings.promo6videolink }}
		</div>
		{% endif %}
		
		{% if section.settings.promo6link != blank %}
		<div class="grid-item large--one-whole" style="padding: 10px; padding-top:0px;">
			<a href="{{ section.settings.promo6link }}"><img class="lazy" data-src="{{ section.settings.promo6 | img_url: '1000x500' }}" border="0"></a>
		</div>
		{% endif %}
	<!-- END 4 SECTION -->
	
	
	<!-- START 5 SECTION -->
	
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo7link }}"><img border="0" class="lazy" data-src="{{ section.settings.promo7 | img_url: '500x500' }}"></a></div>
		
		<div class="grid-item large--one-half" style="padding: 10px;"><a href="{{ section.settings.promo8link }}"><img border="0" class="lazy" data-src="{{ section.settings.promo8 | img_url: '500x500' }}"></a></div>
		
	<!-- END 5 SECTION -->


		
		<div class="grid-item large--one-whole" style="padding: 10px;"><a href="{{ section.settings.promo9link }}"><img border="0" class="lazy" data-src="{{ section.settings.promo9 | img_url: '1000x200' }}"></a><br><br></div>
	
	
</div>
</div>


